<div class="contact">
    <form name="contact" method="POST" data-netlify="true">
        <h1>Contact Me</h1>
            <label for="name">Name:</label>
            <input type="text" name="name" />
            <label for="email">Email:</label>
            <input type="email" name="email" />
            <label for="message">Message:</label>
            <textarea name="message"></textarea>
            <button type="submit">Send</button>
    </form>

</div>
<style>
form {
    background-color: rgba(6, 30, 60, .6);
    padding: 20px;
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    max-width: 400px;
    min-height: 600px;
    margin: 100px;
}
.contact {
    width: 100%;
    height: 100%;
    aspect-ratio: 900/300;
    background-image: url(peaks.svg);
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: row-reverse;
}

@media (max-width: 1000px) { 
  form {
        width: 100%;
        margin: 15px auto;
        padding: 10px
  }
}

label {
    color: var(--light);
    text-align: left;
    margin-top: 10px;
    display:inline-block;
}

h1 {
    text-align: center;
    color: var(--light)
}
input {
    background: none;
    margin-top: 10px;
    width: 100%;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, .3);
    padding: .3rem;
    box-sizing: border-box;
    color: var(--light);
    font-size: 1rem;
}
textarea {
    background: none;
    margin-top: 10px;
    width: 100%;
    height: 50%;
    border-radius: 2px;
    border: 1px solid rgba(255, 255, 255, .3);
    padding: .3rem;
    box-sizing: border-box;
    resize: none;
    color: var(--light);
    font-size: 1rem;
}

button {
    background: var(--midnight-blue-hover);
    color: var(--light);
    border: none;
    border-radius: 5px;
    padding: 5px;
    width: 100%;
    margin-top: 10px;
    cursor: pointer;
    font-size: 1.3rem;
}

</style>
