---
import { Image } from 'astro:assets';
const { title, description, image, alt, icon} = Astro.props;
---

<div class="card">
    <Image src={image} alt={alt} class="card-image" />
    <div class="card-content">
        <h1>{title}</h1>
        <p>{description}</p>
    </div>
    <div>
        <Image class="card-icon" src={icon} alt="icon" />
    </div>
</div>
<style>
h1 {
    color: var(--light);
    font-size: 25px;
}
p {
    color: var(--dim-gray);
    font-size: 15px;
    margin: 0px;
}
.card-content {
    padding-left: 15px;
    padding-right: 15px;
}

.card:hover {
  background: var(--midnight-blue-hover);
}
.card {
    display:flex;
    flex-direction: column;
    width: 400px;
    height: 750px;
    background: var(--midnight-blue);
    border-radius: 20px;
    transition: background 0.5s ease;
    position: relative;
}

.card-icon {
    position: absolute;
    bottom: 10px; 
    left: 10px;  
    width: 10%;  
    height: 5%; 
}

.card-image {
    height: 50%;
    width: 100%;
    border-radius: 20px;
    object-fit: cover;
}
</style>
