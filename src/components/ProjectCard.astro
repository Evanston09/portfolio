---
import { Image } from "astro:assets";

// Use this differnet prop method later
const {
  title,
  description,
  image,
  alt,
  icon,
  readMore,
  readMoreURL,
  readMoreText,
} = Astro.props;
---

<div class="card">
  <Image src={image} alt={alt} class="card-image" />
  <div class="card-content">
    <h1>{title}</h1>
    <p>{description}</p>
  </div>

  <div class="card-footer">
    <Image class="card-icon" src={icon} alt="icon" height={30} width={30} />
    {
      readMore && (
        <a class="card-button" href={readMoreURL} target="_blank">
          {readMoreText}
        </a>
      )
    }
  </div>
</div>
<style>
  h1 {
    color: var(--light);
    font-size: 1.563rem;
  }
  p {
    color: var(--subheading-2);
    font-size: 0.938rem;
    margin: 0px;
  }

  .card-content {
    padding: 0 15px;
  }

  .card:hover {
    background: var(--midnight-blue-hover);
  }

  .card {
    display: flex;
    flex-direction: column;
    max-width: 400px;
    background: var(--midnight-blue);
    border-radius: 20px;
    transition: background 0.5s ease;
  }

  .card-footer {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
  }

  .card-button {
    background: var(--oxford-blue);
    color: var(--light);
    border-radius: 5px;
    padding: 10px 15px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
    text-align: center;
    display: inline-block;
    transition: background 0.3s ease;
  }

  .card-button:hover {
    background: var(--midnight-blue);
  }

  .card-image {
    height: auto;
    width: 100%;
    border-radius: 20px;
    object-fit: cover;
  }
</style>
