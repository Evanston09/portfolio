---
import { Image } from 'astro:assets';
import arrow from '../svg/arrow.svg';

// Use this differnet prop method later
const { title, description, image, alt, icon, readMore, readMoreURL } = Astro.props;
---

<div class="card">
    <Image src={image} alt={alt} class="card-image" />
    <div class="card-content">
        <h1>{title}</h1>
        <p>{description}</p>
    </div>
    <div>
        <Image class="card-icon" src={icon} alt="icon" />
    </div>
    {readMore && <a class="card-button" href={readMoreURL} target="_blank">Read More</a>}
</div>
<style>
h1 {
    color: var(--light);
    font-size: 1.563rem;
}
p {
    color: var(--dim-gray);
    font-size: .938rem;
    margin: 0px;
}
.card-content {
    padding-left: 15px;
    padding-right: 15px;
}

.card:hover {
  background: var(--midnight-blue-hover);
}

.card {
    display:flex;
    flex-direction: column;
    max-width: 400px;
    min-height: 775px;
    justify-items: spacen-between;
    background: var(--midnight-blue);
    border-radius: 20px;
    transition: background 0.5s ease;
    position: relative;

}

.card-icon {
    position: absolute;
    bottom: 10px; 
    left: 10px;  
    width: 10%;  
    height: 5%; 
}

.card-button {
    position: absolute;
    bottom: 10px; 
    right: 10px;  
    background: var(--oxford-blue);
    color: var(--light);
    border: none;
    border-radius: 5px;
    padding: 10px 15px; 
    width: auto; 
    height: auto; 
    margin-top: 10px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
    text-align: center;
    display: inline-block; 
    transition: background 0.3s ease; 
}

.card-button:hover {
    background: var(--midnight-blue);
}

.card-image {
    height: 50%;
    width: 100%;
    border-radius: 20px;
    object-fit: cover;
}
</style>
